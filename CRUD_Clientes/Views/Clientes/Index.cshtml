@model IEnumerable<CRUD_Clientes.Models.Cliente>
@{
    ViewData["Title"] = "Clientes";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="text-primary mb-0">Clientes</h2>
                <a asp-action="Create" class="btn btn-success rounded-3"><i class="bi bi-plus-lg me-1"></i> Nuevo Cliente</a>
            </div>

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Nombre</th>
                                    <th>Email</th>
                                    <th>Teléfono</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row-@item.Id">
                                        <td>@item.Nombre</td>
                                        <td>@item.Email</td>
                                        <td>@item.Telefono</td>
                                        <td class="text-end">
                                            <div class="btn-group">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i></a>
                                                <button class="btn btn-info btn-sm text-white"
                                                        data-modal-url="@Url.Action("Details", "Clientes", new { id = item.Id })">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                <button class="btn btn-danger btn-sm"
                                                        data-modal-url="@Url.Action("Delete", "Clientes", new { id = item.Id })">
                                                    <i class="bi bi-trash3"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Aquí se inyectará el HTML del modal -->
            <div id="modalHost"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
          const modalHost = document.getElementById('modalHost');

          async function openDynamicModal(url) {
            const res = await fetch(url, { headers: { 'X-Requested-With': 'XMLHttpRequest' }});
            if (!res.ok) return console.error('Error cargando modal:', res.statusText);

            modalHost.innerHTML = await res.text();

            const modalEl = document.getElementById('appModal');
            const bsModal = new bootstrap.Modal(modalEl, { backdrop: 'static' });
            bsModal.show();

            modalEl.addEventListener('hidden.bs.modal', () => { modalHost.innerHTML = ''; }, { once: true });
          }

          document.addEventListener('click', (e) => {
            const btn = e.target.closest('[data-modal-url]');
            if (!btn) return;
            openDynamicModal(btn.getAttribute('data-modal-url'));
          });
        })();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
}
